{
  "tasks": [
    {
      "name": "dotnet-format-analysers",
      "command": "dotnet",
      "args": ["format", "analyzers", "src", "--include", "${staged}"],
      "include": ["**/*.cs", "**/*.vb"]
    },
    {
      "name": "dotnet-format-style",
      "command": "dotnet",
      "args": ["format", "style", "src", "--include", "${staged}"],
      "include": ["**/*.cs", "**/*.vb"]
    },
    {
      "name": "Run csharpier",
      "command": "dotnet",
      "args": ["csharpier", "${staged}"],
      "include": ["**/*.cs"]
    }
  ]
}
